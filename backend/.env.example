# Resource Environment 
# Set to "cloud" or "local" to switch between configurations
RESOURCE_ENVIRONMENT=cloud

# Database Configuration 
# Cloud Database (Neon PostgreSQL)
DATABASE_URL_CLOUD=

# Local Database (Docker PostgreSQL)
DATABASE_URL_LOCAL=postgresql://postgres:postgres@localhost:5432/postgres?sslmode=disable

# Event Stream Configuration 
# Event Stream Type: "kafka" or "redis"
EVENT_STREAM=redis

# Redis Configuration 
# Cloud Redis (Upstash) - Password included in URL
REDIS_URL_CLOUD=

# Local Redis (Docker) - Simple host:port format
REDIS_URL_LOCAL=localhost:6379
REDIS_PASSWORD_LOCAL=

# Redis Stream Name
REDIS_STREAM=game-events

# Kafka Configuration (Local Only) 
KAFKA_BROKERS_LOCAL=localhost:9092
KAFKA_TOPIC_LOCAL=game-analytics

# Server Configuration 
PORT=8080
